<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE reportConfiguration [
  <!ELEMENT reportConfiguration (reportType, general, sections, footer, limitations)>
  <!ELEMENT reportType (#PCDATA)>
  <!ELEMENT general (title, version, author)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT version (#PCDATA)>
  <!ELEMENT author (name, department, email)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT department (#PCDATA)>
  <!ELEMENT email (#PCDATA)>

  <!ELEMENT sections (section+)>
  <!ELEMENT section (name, content)>
  <!ATTLIST section id ID #REQUIRED>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT content (type, (#PCDATA | maxLength | minLength | font | allowedMethodologies | columns | allowedAnalysisTypes | allowedFileTypes | maxFileSize)*)>
  <!ELEMENT type (#PCDATA)>

  <!-- Font for sections with content -->
  <!ELEMENT font (family, size, color)>
  <!ELEMENT family (#PCDATA)>
  <!ELEMENT size (#PCDATA)>
  <!ELEMENT color (#PCDATA)>

  <!-- Methodologies allowed for Methodology section -->
  <!ELEMENT allowedMethodologies (methodology+)>
  <!ELEMENT methodology (#PCDATA)>

  <!-- Analysis types for Analysis section -->
  <!ELEMENT allowedAnalysisTypes (type+)>
  <!ELEMENT type (#PCDATA)>

  <!-- Table columns for Results section -->
  <!ELEMENT columns (column+)>
  <!ELEMENT column (name, dataType, (maxLength | minValue | maxValue)?)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT dataType (#PCDATA)>
  <!ELEMENT maxLength (#PCDATA)>
  <!ELEMENT minValue (#PCDATA)>
  <!ELEMENT maxValue (#PCDATA)>

  <!-- Allowed file types for Appendices section -->
  <!ELEMENT allowedFileTypes (fileType+)>
  <!ELEMENT fileType (#PCDATA)>

  <!-- Footer and acknowledgments -->
  <!ELEMENT footer (acknowledgments, contactDetails)>
  <!ELEMENT acknowledgments (text)>
  <!ELEMENT text (#PCDATA)>
  <!ELEMENT contactDetails (email, phone)>
  <!ELEMENT phone (#PCDATA)>

  <!-- Limitations section -->
  <!ELEMENT limitations (dataAccuracy, methodologyLimitations)>
  <!ELEMENT dataAccuracy (#PCDATA)>
  <!ELEMENT methodologyLimitations (limitation+)>
  <!ELEMENT limitation (#PCDATA)>
]>

<reportConfiguration>
  <reportType>Technical Report</reportType>
  <general>
    <title>Technical Report Configuration</title>
    <version>1.0</version>
    <author>
      <name>John Doe</name>
      <department>Engineering</department>
      <email>john.doe@company.com</email>
    </author>
  </general>

  <sections>
    <section id="1">
      <name>Introduction</name>
      <content>
        <type>text</type>
        <maxLength>3000</maxLength>
        <minLength>500</minLength>
        <font>
          <family>Courier New</family>
          <size>12</size>
          <color>#000000</color>
        </font>
      </content>
    </section>

    <section id="2">
      <name>Methodology</name>
      <content>
        <type>text</type>
        <maxLength>5000</maxLength>
        <minLength>1000</minLength>
        <allowedMethodologies>
          <methodology>Quantitative Analysis</methodology>
          <methodology>Qualitative Research</methodology>
          <methodology>Case Studies</methodology>
        </allowedMethodologies>
      </content>
    </section>

    <section id="3">
      <name>Results</name>
      <content>
        <type>table</type>
        <columns>
          <column>
            <name>Test</name>
            <dataType>string</dataType>
            <maxLength>50</maxLength>
          </column>
          <column>
            <name>Value</name>
            <dataType>numeric</dataType>
            <minValue>0</minValue>
            <maxValue>100000</maxValue>
          </column>
          <column>
            <name>Unit</name>
            <dataType>string</dataType>
            <maxLength>20</maxLength>
          </column>
        </columns>
      </content>
    </section>

    <section id="4">
      <name>Analysis</name>
      <content>
        <type>text</type>
        <maxLength>6000</maxLength>
        <minLength>1500</minLength>
        <allowedAnalysisTypes>
          <type>statistical</type>
          <type>graphical</type>
          <type>comparative</type>
        </allowedAnalysisTypes>
      </content>
    </section>

    <section id="5">
      <name>Conclusion</name>
      <content>
        <type>text</type>
        <maxLength>2000</maxLength>
        <minLength>500</minLength>
        <font>
          <family>Times New Roman</family>
          <size>14</size>
          <color>#000000</color>
        </font>
      </content>
    </section>

    <section id="6">
      <name>Appendices</name>
      <content>
        <type>file</type>
        <allowedFileTypes>
          <fileType>pdf</fileType>
          <fileType>pptx</fileType>
          <fileType>xlsx</fileType>
        </allowedFileTypes>
        <maxFileSize>50MB</maxFileSize>
      </content>
    </section>
  </sections>

  <footer>
    <acknowledgments>
      <text>Special thanks to the research team for their contributions.</text>
    </acknowledgments>
    <contactDetails>
      <email>techsupport@company.com</email>
      <phone>+1234567890</phone>
    </contactDetails>
  </footer>

  <limitations>
    <dataAccuracy>Medium</dataAccuracy>
    <methodologyLimitations>
      <limitation>Limited sample size</limitation>
      <limitation>Inaccurate measurements</limitation>
    </methodologyLimitations>
  </limitations>
</reportConfiguration>
