<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE reportConfiguration [
  <!ELEMENT reportConfiguration (reportType, general, sections, footer, limitations)>
  <!ELEMENT reportType (#PCDATA)>
  <!ELEMENT general (title, year, companyDetails)>
  <!ELEMENT title (#PCDATA)>
  <!ELEMENT year (#PCDATA)>
  <!ELEMENT companyDetails (name, industry, location)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT industry (#PCDATA)>
  <!ELEMENT location (#PCDATA)>
  
  <!ELEMENT sections (section+)>
  <!ELEMENT section (name, content)>
  <!ATTLIST section id ID #REQUIRED>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT content (type, (#PCDATA | columns | maxLength | minLength | allowedTopics | governanceMetrics)*)>
  <!ELEMENT type (#PCDATA)>
  <!ELEMENT columns (column+)>
  <!ELEMENT column (name, dataType, (maxLength | minValue | maxValue)?)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT dataType (#PCDATA)>
  <!ELEMENT maxLength (#PCDATA)>
  <!ELEMENT minValue (#PCDATA)>
  <!ELEMENT maxValue (#PCDATA)>
  <!ELEMENT allowedTopics (topic+)>
  <!ELEMENT topic (#PCDATA)>
  <!ELEMENT governanceMetrics (metric+)>
  <!ELEMENT metric (#PCDATA)>
  
  <!ELEMENT footer (disclaimer, contactDetails)>
  <!ELEMENT disclaimer (text)>
  <!ELEMENT text (#PCDATA)>
  <!ELEMENT contactDetails (email, phone)>
  <!ELEMENT email (#PCDATA)>
  <!ELEMENT phone (#PCDATA)>
  
  <!ELEMENT limitations (dataAccuracy, reportingStandards)>
  <!ELEMENT dataAccuracy (#PCDATA)>
  <!ELEMENT reportingStandards (standard+)>
  <!ELEMENT standard (#PCDATA)>
]>

<reportConfiguration>
  <reportType>ESG Report</reportType>
  <general>
    <title>ESG Report Configuration</title>
    <year>2024</year>
    <companyDetails>
      <name>Company Name</name>
      <industry>Industry Type</industry>
      <location>Headquarters Location</location>
    </companyDetails>
  </general>

  <sections>
    <section id="1">
      <name>Environmental Impact</name>
      <content>
        <type>table</type>
        <columns>
          <column>
            <name>Indicator</name>
            <dataType>string</dataType>
            <maxLength>50</maxLength>
          </column>
          <column>
            <name>Value</name>
            <dataType>numeric</dataType>
            <minValue>0</minValue>
            <maxValue>1000000</maxValue>
          </column>
          <column>
            <name>Unit</name>
            <dataType>string</dataType>
            <maxLength>20</maxLength>
          </column>
        </columns>
      </content>
    </section>

    <section id="2">
      <name>Social Responsibility</name>
      <content>
        <type>text</type>
        <maxLength>3000</maxLength>
        <minLength>500</minLength>
        <allowedTopics>
          <topic>Employee Welfare</topic>
          <topic>Community Engagement</topic>
          <topic>Diversity and Inclusion</topic>
        </allowedTopics>
      </content>
    </section>

    <section id="3">
      <name>Governance</name>
      <content>
        <type>text</type>
        <maxLength>2000</maxLength>
        <minLength>500</minLength>
        <governanceMetrics>
          <metric>Board Diversity</metric>
          <metric>Ethical Standards</metric>
          <metric>Anti-corruption Practices</metric>
        </governanceMetrics>
      </content>
    </section>

    <section id="4">
      <name>Supply Chain Responsibility</name>
      <content>
        <type>table</type>
        <columns>
          <column>
            <name>Supplier</name>
            <dataType>string</dataType>
            <maxLength>100</maxLength>
          </column>
          <column>
            <name>Compliance</name>
            <dataType>boolean</dataType>
          </column>
        </columns>
      </content>
    </section>

    <section id="5">
      <name>Climate Change Initiatives</name>
      <content>
        <type>text</type>
        <maxLength>4000</maxLength>
        <minLength>1000</minLength>
      </content>
    </section>
  </sections>

  <footer>
    <disclaimer>
      <text>This report is intended for stakeholders and investors.</text>
    </disclaimer>
    <contactDetails>
      <email>esg@company.com</email>
      <phone>+1234567890</phone>
    </contactDetails>
  </footer>

  <limitations>
    <dataAccuracy>High</dataAccuracy>
    <reportingStandards>
      <standard>Global Reporting Initiative (GRI)</standard>
      <standard>Sustainability Accounting Standards Board (SASB)</standard>
    </reportingStandards>
  </limitations>
</reportConfiguration>
